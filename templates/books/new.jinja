{% extends "base.jinja" %}
{% block content %}

<form action="/books" method="post">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Title" required autofocus>
    </div>

    <div>
        <label for="author_name">Author:</label>
        <input type="text" id="author_name" name="author_name" placeholder="Author Name" required>
    </div>

    <div>
        <input type="checkbox" id="existing_author" name="existing_author">
        <label for="existing_author">Author already in database</label>
    </div>


    <div>
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" placeholder="Genre" required>
    </div>



    <button type="submit">Add Book</button>
</form>

{% endblock %}